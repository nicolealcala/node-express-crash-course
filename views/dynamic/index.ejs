<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="site-content">
        <h2>All blogs</h2>

        <ul>
            <% if(blogs.length> 0) {%>
            <% blogs.forEach(blog=> { %>
            <li>
                <p>
                    <strong>
                        <%=blog.title %>
                    </strong> | <%=blog.snippet %>
                </p>
            </li>
            <% }) %>
            <% } else {%>
            <p>No blogs yet</p>
            <% } %>
        </ul>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>